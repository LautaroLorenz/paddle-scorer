{
    "singleQuote": true,
    "overrides": [
        {
          "files": "*.html",
          "options": {
            "bracketSameLine": true,
            "tabWidth": 4,
            "useTabs": false,
            "printWidth": 120,
            "singleAttributePerLine": true
          }
        },
        {
            "files": "*.ts",
            "options": {
              "tabWidth": 4,
              "useTabs": false,
              "printWidth": 120,
              "trailingComma": "none"
            }
        }
    ]
}
